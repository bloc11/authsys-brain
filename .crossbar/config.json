{
    "version": 2,
    "workers": [
        {
            "type": "router",
            "options": {
                "pythonpath": [".."]
            },
            "realms": [
                {
                    "name": "authsys",
                    "roles": [
                        {
                            "name": "frontdesk",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        },
                        {
                            "name": "authenticator",
                            "permissions": [
                                {
                                    "uri": "com.auth",
                                    "match": "exact",
                                    "allow": {
                                        "call": false,
                                        "register": true,
                                        "publish": false,
                                        "subscribe": false
                                    },
                                    "disclose": {
                                        "caller": false,
                                        "publisher": false
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "web",
                    "endpoint": {
                        "type": "tcp",
                        "port": 8087
                    },
                    "paths": {
                        "/": {
                            "type": "static",
                            "directory": "../web"
                        },
                        "fonts": {
                            "type": "static",
                            "directory": "../web/fonts",
                            "options": {
                                "enable_directory_listing": true
                            }
                        },
                        "voucher": {
                            "type": "resource",
                            "classname": "main.VoucherManager"
                        },
                        "signup": {
                            "type": "resource",
                            "classname": "signup.SignupManager"
                        },
                        "ws": {
                            "auth": {
                                "wampcra": {
                                    "type": "dynamic",
                                    "authenticator": "com.auth"
                                }

                            },
                            "type": "websocket"
                        }
                    }
                }
            ],
            "components": [{
                "type": "class",
                "classname": "authenticator.AuthSession",
                "realm": "authsys",
                "role": "authenticator"
            }]
        },
        {
            "type": "container",
            "options": {
                "pythonpath": [
                    ".."
                ]
            },
            "components": [
                {
                    "type": "class",
                    "classname": "main.AppSession",
                    "realm": "authsys",
                    "transport": {
                        "type": "websocket",
                        "endpoint": {
                            "type": "tcp",
                            "host": "127.0.0.1",
                            "port": 8087
                        },
                        "url": "ws://127.0.0.1:8087/ws"
                    }
                }
            ]
        }
    ]
}
